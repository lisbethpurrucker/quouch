<h1>Our Hosts</h1>

<ul>
<% @users.each do |user| %>
    <li>
        <h2><%= link_to "#{user.first_name}", couch_path(user.couch.id) %></h2>
        <p><%= user.calculated_age %>, <%= user.pronouns %></p>
        <ul>
            <% user.couch.facilities.each do |facility| %>
                <li><%= facility.name %></li>
            <% end %>
        </ul>
    </li>
<% end %>
</ul>
