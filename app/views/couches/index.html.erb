<h1>Our Hosts</h1>

<ul>
<% @couches.each do |couch| %>
    <li>
        <h2><%= link_to "#{couch.user.first_name}", couch_path(couch.id) %></h2>
        <p><%= couch.user.calculated_age %>, <%= couch.user.pronouns %></p>
        <ul>
            <% couch.facilities.each do |facility| %>
                <li><%= facility.name %></li>
            <% end %>
        </ul>
    </li>
<% end %>
</ul>
