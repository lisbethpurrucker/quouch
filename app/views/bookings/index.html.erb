<h2> My Bookings </h2>

<% @bookings.each do |booking| %>
	<ul>
		<li><%= booking.couch.user.first_name %></li>
		<li><%= booking.couch.user.city.name %></li>
		<li><%= booking.status %></li>
		<li><%= booking.start_date %> - <%= booking.end_date %></li>
		<li><%= booking.number_travellers %></li>
		<li><%= link_to 'See Details', booking_path(booking) %>
	</ul>
<% end %>

<h2>My Requests</h2>

<% @requests.each do |request| %>
	<ul>
		<li><%= request.user.first_name %></li>
		<li><%= request.status %></li>
		<li><%= request.start_date %> - <%= request.end_date %></li>
		<li><%= request.number_travellers %></li>
		<li><%= link_to 'See Details', booking_path(request) %>
	</ul>
<% end %>