<% if notice %>
  <div class="flash" role="alert" data-controller="close-modal" data-close-modal-target="modal">
    <%= notice %>
    <button type="button" class="flash__button" aria-label="Close" data-action="click->close-modal#closeModal">
      <%= image_tag('icons/close') %>
    </button>
  </div>
<% end %>
