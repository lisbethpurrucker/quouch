<article class="invite">
  <h2 class="invite__title"><%= t "devise.invitations.new.header" %></h2>

  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: 'invite__wrap'}) do |f| %>
    <%= f.error_notification %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="invite__inputs">
        <%= f.input field %>
        <div class="invite__actions">
          <%= f.button :submit, t("devise.invitations.new.submit_button"), class: 'invite__button' %>
        </div>
      </div>
    <% end -%>

  <% end %>
</article>