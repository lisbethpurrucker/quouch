<div data-controller="chat-subscription"
     data-chat-subscription-chat-id-value="<%= @chat.id %>">
  <h1>#<%= @name %></h1>

  <div class="messages" data-chat-subscription-target="messages">
    <% @chat.messages.each do |message| %>
          <%= render "messages/message", message: message %>
    <% end %>
  </div>

	<%= simple_form_for [@chat, @message], remote: true,
  html: { 
    data: { 
      controller: 'chat-subscription',
      action: "turbo:submit-end->chat-subscription#resetForm"
    }
  } do |f|
%>
  <%= f.input :content,
    label: false,
    placeholder: "Message ##{@name}",
    wrapper_html: {class: "flex-grow-1"}
  %>
  <%= f.submit "Send", class: "btn btn-primary mb-3" %>
<% end %>
</div>