<h2>Edit <%= current_user.first_name %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
    <%= f.input :photo, as: :file %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :date_of_birth,
                start_year: Date.today.year - 100,
                end_year: Date.today.year,
                required: true,
                autofocus: true %>
    <%= f.select :pronouns,
                 ['he/him', 'she/her', 'they/them', 'other'],
                 required: true,
                 autofocus: true %>
    <%= f.association :city,
                      as: :radio_buttons,
                      required: true,
                      autofocus: true %>
    <%= f.input :summary,
                required: true,
                autofocus: true %>
    <%= f.input :offers_couch,
                autofocus: true %>
    <%= f.input :offers_co_work,
                autofocus: true %>
    <%= f.input :offers_hang_out,
                autofocus: true %>
    <%= f.input :question_one,
                label: 'This makes me really happy',
                required: true,
                autofocus: true %>
    <%= f.input :question_two,
                label: "What I can't stand",
                required: true,
                autofocus: true %>
    <%= f.input :question_three,
                label: 'Tell us what you need and like',
                required: true,
                autofocus: true %>
    <%= f.input :question_four,
                label: 'When you live at my place, I appreciate..',
                required: true,
                autofocus: true %>

    <%= simple_fields_for :couch do |cf| %>
      <%= cf.input :capacity,
                   collection: 1..6,
                   label: 'I can host:' %>
      <%= simple_fields_for :couch_facility do |cff| %>
        <%= cff.input :facility_id,
                       collection: Facility.all,
                       label: 'My Couch comes with:' %>
      <% end %>
    <% end %>


    <%# <%= simple_fields_for :couch_facility do |cff| %>
      <%# <%= cff.association :facility,
                          as: :radio_buttons,
                          label: 'My Couch comes with:' %>
    <%# <% end %>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
